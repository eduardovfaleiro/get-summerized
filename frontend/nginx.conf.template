# frontend/nginx.conf.template
server {
    # Escuta na porta fornecida pela vari√°vel de ambiente
    listen ${PORT};

    location / {
        root   /usr/share/nginx/html;
        index  index.html;
        # Essencial para que o roteamento do Vue (History Mode) funcione
        try_files $uri $uri/ /index.html;
    }
}